
@{
    ViewBag.Title = "Sales";
}

<h2 class="d-flex justify-content-end">Sales</h2>

<!-- Credit Card -->
<div class="row">
    <!-- Form -->
    <div class="col">
        <h3 class="row d-flex justify-content-center">Credit Card</h3>
        <form>
            <input type="hidden" id="creditCardID" />
            <div class="form-group row">
                <div id="creditCardAlert" class="alert alert-danger alert-dismissible collapse" role="alert" style="width:100%;">Error: There are required empty fields.<a href="#" class="close" data-dismiss="alert">&times;</a></div>
                <div id="creditCardPostSuccess" class="alert alert-primary alert-dismissible collapse" role="alert" style="width:100%;">Data saved successfully.<a href="#" class="close" data-dismiss="alert">&times;</a></div>
            </div>
            <div class="form-group row">
                <input id="creditCardCardType" type="text" placeholder="Card Type *" class="form-control form-control-sm" />
            </div>
            <div class="form-group row">
                <input id="creditCardCardNumber" type="text" placeholder="Card Number *" class="form-control form-control-sm" />
            </div>
            <div class="form-group row">
                <input id="creditCardExpMonth" type="text" placeholder="Exp Month *" class="form-control form-control-sm" />
            </div>
            <div class="form-group row">
                <input id="creditCardExpYear" type="text" placeholder="Exp Year *" class="form-control form-control-sm" />
            </div>
            <div class="form-group row d-flex justify-content-center">
                <button id="creditCardSave" type="button" class="btn btn-warning btn-sm col-md-3" style="margin:0 15px;">Save</button>
                <button id="creditCardReset" type="button" class="btn btn-info btn-sm col-md-1" style="margin:0 15px;"><i class="fas fa-sync-alt"></i></button>
            </div>
            <label style="font-size:11px;">* Required values.</label>
        </form>
    </div>
    <!-- Table -->
    <div class="col col-md-8">
        <div class="pagination pagination-sm">
            <div class="table-responsive">
                <table id="creditCardTable" class="table table-sm table-bordered table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>ID&nbsp;&nbsp;</th>
                            <th>Card Type</th>
                            <th>Card Number</th>
                            <th>Exp Month</th>
                            <th>Exp Year</th>
                            <th>Modified Date</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<div style="height:100px;"></div>

<!-- Sales Person -->
<div class="row">
    <!-- Form -->
    <div class="col">
        <h3 class="row d-flex justify-content-center">Sales Person</h3>
        <form>
            <input type="hidden" id="salesPersonID" />
            <div class="form-group row">
                <div id="salesPersonAlert" class="alert alert-danger alert-dismissible collapse" role="alert" style="width:100%;">Error: There are required empty fields.<a href="#" class="close" data-dismiss="alert">&times;</a></div>
                <div id="salesPersonPostSuccess" class="alert alert-primary alert-dismissible collapse" role="alert" style="width:100%;">Data saved successfully.<a href="#" class="close" data-dismiss="alert">&times;</a></div>
            </div>
            <div class="form-group row">
                <input id="salesPersonTerritoryID" type="text" placeholder="Territory ID" class="form-control form-control-sm" />
            </div>
            <div class="form-group row">
                <input id="salesPersonSalesQuota" type="text" placeholder="Sales Quota" class="form-control form-control-sm" />
            </div>
            <div class="form-group row">
                <input id="salesPersonBonus" type="text" placeholder="Bonus *" class="form-control form-control-sm" />
            </div>
            <div class="form-group row">
                <input id="salesPersonCommissionPct" type="text" placeholder="Commission Percent *" class="form-control form-control-sm" />
            </div>
            <div class="form-group row">
                <input id="salesPersonSalesYTD" type="text" placeholder="Sales YTD *" class="form-control form-control-sm" />
            </div>
            <div class="form-group row">
                <input id="salesPersonSalesLastYear" type="text" placeholder="Sales Last Year *" class="form-control form-control-sm" />
            </div>
            <div class="form-group row">
                <input id="salesPersonRowguid" type="text" placeholder="row guid *" class="form-control form-control-sm" />
            </div>
            <div class="form-group row d-flex justify-content-center">
                <button id="salesPersonSave" type="button" class="btn btn-warning btn-sm col-md-3" style="margin:0 15px;">Save</button>
                <button id="salesPersonReset" type="button" class="btn btn-info btn-sm col-md-1" style="margin:0 15px;"><i class="fas fa-sync-alt"></i></button>
            </div>
            <label style="font-size:11px;">* Required values.</label>
        </form>
    </div>
    <!-- Table -->
    <div class="col col-md-8">
        <div class="pagination pagination-sm">
            <div class="table-responsive">
                <table id="salesPersonTable" class="table table-sm table-bordered table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>ID&nbsp;&nbsp;</th>
                            <th class="xm-col">Territory ID</th>
                            <th class="xm-col">Sales Quota</th>
                            <th>Bonus</th>
                            <th class="xm-col">Comission %</th>
                            <th class="xm-col">Sales YTD</th>
                            <th class="md-col">Sales Last Year</th>
                            <th class="md-col">rowguid</th>
                            <th class="xm-col">Modified Date</th>
                            <th class="xm-col">Edit</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<div style="height:100px;"></div>

<!-- Error Modal -->
<div class="modal fade" id="errorModal" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Internal Error</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p id="errorModalMsg">Error</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Confirm Modals -->
<div class="modal fade" id="creditCardModal" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="creditCardDeleteID" />
                <p>Are you sure you want to delete this record?</p>
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn btn-danger" onclick="creditCardDelete()">Yes</button>
                <button type="button" data-dismiss="modal" class="btn btn-primary">No</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="salesPersonModal" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="salesPersonDeleteID" />
                <p>Are you sure you want to delete this record?</p>
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn btn-danger" onclick="salesPersonDelete()">Yes</button>
                <button type="button" data-dismiss="modal" class="btn btn-primary">No</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/ViewScripts/Sales.js"></script>

